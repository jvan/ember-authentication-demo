
<h2>admin</h2>

<div class="list-group">
{{#each article in controller}}
   <div class="list-group-item">
      <h4>{{#link-to "articles.post" article}}{{article.title}}{{/link-to}} <small>{{article.author}}</small>
      {{#if article.published}}
         <span class="label label-success pull-right">published</span>
      {{else}}
         <span class="label label-warning pull-right">draft</span>
      {{/if}} 
      </h4>
   </div>
{{/each}}
</div>

